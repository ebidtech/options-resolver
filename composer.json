{
  "name":        "ebidtech/options-resolver",
  "description": "An extension of Symfony's OptionsResolver component",
  "license":     "MIT",
  "homepage":    "https://github.com/ebidtech/options-resolver",
  "type":        "library",
  "keywords":    [],
  "require": {
    "php":                       "~5.4",
    "psr/log":                   "~1.0",
    "symfony/options-resolver":  "~2.6"
  },
  "require-dev": {
    "phpunit/phpunit":           "~5.0",
    "nikic/php-parser":          "~2.0",
    "squizlabs/php_codesniffer": "~2.5"
  },
  "scripts": {
